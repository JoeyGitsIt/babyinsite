<div class="diet container-fluid">
    <section class="dietChart">
        <div>
            <canvas id="myChart" width="50" height="50"></canvas>
            <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>
        </div>
    </section>
    <div class="dietEntries">
        Recent Meals:
        {{#each recentMeals as |food|}}
            <ul>{{format_date food.time}}: {{food.food}} {{food.quantity}}oz</ul>
        {{/each}}
    </div>
</div>



<script>
    
let labels = [];
let values = [];

{{#each sortedFoodQuantity}}
    labels.push("{{day}}")
    values.push("{{quantity}}")
{{/each}}

console.log(values);

const ctx = document.getElementById('myChart');
const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        {{!-- labels is labels:labels --}}
        labels,
        datasets: [{
            label: 'oz of food per day',
            data: values,
            backgroundColor: [
                'rgba(255, 99, 132, 0.3)',
                'rgba(54, 162, 235, 0.3)',
                'rgba(255, 206, 86, 0.3)',
                'rgba(75, 192, 192, 0.3)',
                'rgba(153, 102, 255, 0.3)',
                'rgba(255, 159, 64, 0.3)',
                'rgba(3, 133, 9, 0.3)'

            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)',
                'rgba(3, 133, 9, 1)'
                
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            y: {
                beginAtZero: true,
            }
        }
    }
});
</script>